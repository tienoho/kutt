<thead>
  {{> admin/table_tab title='users'}}
  <tr class="controls users-controls with-filters">
    <th class="filters">
      <div>
        <div class="search-input-wrapper">
          <input 
            id="search" 
            name="search" 
            type="text" 
            placeholder="{{t 'admin.search_user_placeholder'}}" 
            class="table-input search admin" 
            hx-on:input="onSearchChange(event)" 
            hx-on:keyup="resetTableNav()"
            value="{{query.search}}"
          />
          <button 
            type="button" 
            aria-label="{{t 'admin.clear_search'}}" 
            class="clear" 
            onclick="clearSeachInput(event)"
          >
            {{> icons/x}}
          </button>
        </div>
        <select  id="users-select-verified" name="verified" class="table-input verification" hx-on:change="resetTableNav()">
          <option value="">{{t 'admin.search_verified'}}</option>
          <option value="true" {{#ifEquals query.verified 'true'}}selected{{/ifEquals}}>{{t 'common.verified'}}</option>
          <option value="false" {{#ifEquals query.verified 'false'}}selected{{/ifEquals}}>{{t 'common.not_verified'}}</option>
        </select>
        <select id="users-select-banned" name="banned" class="table-input ban" hx-on:change="resetTableNav()">
          <option value="" selected>{{t 'admin.search_banned'}}</option>
          <option value="true">{{t 'common.banned'}}</option>
          <option value="false">{{t 'common.not_banned'}}</option>
        </select>
        <select id="users-select-role" name="role" class="table-input role" hx-on:change="resetTableNav()">
          <option value="">{{t 'admin.role_select'}}</option>
          <option value="USER" {{#ifEquals query.role 'USER'}}selected{{/ifEquals}}>{{t 'common.user_role'}}</option>
          <option value="ADMIN" {{#ifEquals query.role 'ADMIN'}}selected{{/ifEquals}}>{{t 'common.admin_role'}}</option>
        </select>
      </div>
      <div>
        <select id="users-select-domain" name="domains" class="table-input domains" hx-on:change="resetTableNav()">
          <option value="">{{t 'admin.domain_select'}}</option>
          <option value="true" {{#ifEquals query.domains 'true'}}selected{{/ifEquals}}>{{t 'admin.with_domains'}}</option>
          <option value="false" {{#ifEquals query.domains 'false'}}selected{{/ifEquals}}>{{t 'admin.no_domains'}}</option>
        </select>
        <select id="users-select-links" name="links" class="table-input links" hx-on:change="resetTableNav()">
          <option value="" selected>{{t 'admin.search_links'}}</option>
          <option value="true" {{#ifEquals query.links 'true'}}selected{{/ifEquals}}>{{t 'admin.with_links'}}</option>
          <option value="false" {{#ifEquals query.links 'true'}}selected{{/ifEquals}}>{{t 'admin.no_links'}}</option>
        </select>
        <input id="total" name="total" type="hidden" value="{{total}}" />
        <input id="limit" name="limit" type="hidden" value="10" />
        <input id="skip" name="skip" type="hidden" value="0" />
        <button 
          class="table primary"
          hx-on:click='openDialog("admin-table-dialog")' 
          hx-get="/create-user" 
          hx-target="#admin-table-dialog .content-wrapper" 
          hx-indicator="#admin-table-dialog"
        >
          <span>{{> icons/new_user}}</span>
          {{t 'admin.create_user_btn'}}
        </button>
      </div>
    </th>
    {{> admin/table_nav}}
  </tr>
  <tr>
    <th class="users-id">{{t 'admin.column_id'}}</th>
    <th class="users-email">{{t 'admin.column_email'}}</th>
    <th class="users-created-at">{{t 'admin.column_created_at'}}</th>
    <th class="users-verified">{{t 'admin.verification'}}</th>
    <th class="users-role">{{t 'common.role'}}</th>
    <th class="users-links-count">{{t 'admin.column_total_links'}}</th>
    <th class="users-actions"></th>
  </tr>
</thead>
