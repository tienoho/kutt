<thead>
  {{> admin/table_tab title='links'}}
  <tr class="controls links-controls with-filters">
    <th class="filters">
      <div>
        <div class="search-input-wrapper">
          <input 
            id="search" 
            name="search" 
            type="text" 
            placeholder="{{t 'admin.search_link_placeholder'}}" 
            class="table-input search admin" 
            hx-on:input="onSearchChange(event)" 
            hx-on:keyup="resetTableNav()"
            value="{{query.search}}"
          />
          <button 
            type="button" 
            aria-label="{{t 'admin.clear_search'}}" 
            class="clear" 
            onclick="clearSeachInput(event)"
          >
            {{> icons/x}}
          </button>
        </div>
        <div class="search-input-wrapper">
          <input 
            id="search_domain" 
            name="domain" 
            type="text" 
            placeholder="{{t 'admin.search_domain_placeholder'}}" 
            class="table-input search admin" 
            hx-on:input="onSearchChange(event)" 
            hx-on:keyup="resetTableNav()"
            value="{{query.domain}}"
          />
          <button 
            type="button" 
            aria-label="{{t 'admin.clear_user_search'}}" 
            class="clear" 
            onclick="clearSeachInput(event)"
          >
            {{> icons/x}}
          </button>
        </div>
        <div class="search-input-wrapper">
          <input 
            id="search_user" 
            name="user" 
            type="text" 
            placeholder="{{t 'admin.search_user_placeholder'}}" 
            class="table-input search admin" 
            hx-on:input="onSearchChange(event)" 
            hx-on:keyup="resetTableNav()"
            value="{{query.user}}"
          />
          <button 
            type="button" 
            aria-label="{{t 'admin.clear_user_search'}}" 
            class="clear" 
            onclick="clearSeachInput(event)"
          >
            {{> icons/x}}
          </button>
        </div>
      </div>
      <div>
        <select 
          id="links-select-banned"
          name="banned"
          class="table-input ban"
          hx-on:change="resetTableNav()"
        >
          <option value="" selected>{{t 'admin.search_banned'}}</option>
          <option value="true">{{t 'common.banned'}}</option>
          <option value="false">{{t 'common.not_banned'}}</option>
        </select>
        <select 
          id="links-select-anonymous"
          name="anonymous"
          class="table-input anonymous"
          hx-on:change="resetTableNav()"
        >
          <option value="">{{t 'admin.anonymous'}}</option>
          <option value="true" {{#ifEquals query.anonymous 'true'}}selected{{/ifEquals}}>{{t 'common.anonymous'}}</option>
          <option value="false" {{#ifEquals query.anonymous 'false'}}selected{{/ifEquals}}>{{t 'common.user'}}</option>
        </select>
        <select 
          id="links-select-anonymous"
          name="has_domain"
          class="table-input has_domain"
          hx-on:change="resetTableNav()"
        >
          <option value="">{{t 'admin.domain_select'}}</option>
          <option value="true" {{#ifEquals query.has_domain 'true'}}selected{{/ifEquals}}>{{t 'admin.with_domain'}}</option>
          <option value="false" {{#ifEquals query.has_domain 'false'}}selected{{/ifEquals}}>{{t 'admin.no_domain'}}</option>
        </select>
        <input id="total" name="total" type="hidden" value="{{total}}" />
        <input id="limit" name="limit" type="hidden" value="10" />
        <input id="skip" name="skip" type="hidden" value="0" />
      </div>
    </th>
    {{> admin/table_nav}}
  </tr>
  <tr>
    <th class="original-url">{{t 'common.original_url'}}</th>
    <th class="created-at">{{t 'common.created_at'}}</th>
    <th class="short-link">{{t 'common.short_link'}}</th>
    <th class="views">{{t 'common.views'}}</th>
    <th class="actions"></th>
  </tr>
</thead>
