<thead>
  <tr class="controls links-controls">
    <th class="search">
      <input class="table-input search" id="search" name="search" type="text" placeholder="{{t 'common.search_placeholder'}}" hx-on:keyup="resetTableNav()" />
      <input id="total" name="total" type="hidden" value="{{total}}" />
      <input id="limit" name="limit" type="hidden" value="10" />
      <input id="skip" name="skip" type="hidden" value="0" />
    </th>
    {{> links/nav}}
  </tr>
  <tr>
    <th class="original-url">{{t "common.original_url"}}</th>
    <th class="created-at">{{t "common.created_at"}}</th>
    <th class="short-link">{{t "common.short_link"}}</th>
    <th class="views">{{t "common.views"}}</th>
    <th class="actions"></th>
  </tr>
</thead>
