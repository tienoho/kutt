<div class="content">
  <h2>{{t "links.delete_link_title"}}</h2>
  <p>
    {{t "links.confirm_delete"}} "<b>{{link}}</b>"?
  </p>
  <div class="buttons">
    <button type="button" hx-on:click="closeDialog()">{{t "common.cancel"}}</button>
    <button 
      type="button"
      class="danger confirm" 
      hx-delete="/api/links/{id}" 
      hx-ext="path-params" 
      hx-vals='{"id":"{{id}}"}' 
      hx-target="closest .content" 
      hx-swap="none" 
      hx-indicator="closest .content"
      hx-select-oob="#dialog-error"
    >
      <span>{{> icons/trash}}</span>
      {{t "common.delete"}}
    </button>
    {{> icons/spinner}}
  </div>
  <div id="dialog-error">
    {{#if error}}
      <p class="error">{{error}}</p>
    {{/if}}
  </div>
</div>
