<form
  id="reset-password-form"
  class="htmx-spinner"
  hx-post="/api/auth/reset-password"
  hx-sync="this:abort"
  hx-swap="outerHTML"
> 
  {{#if message}}
    <p class="success">{{message}}</p>
  {{else}}
    <div class="inputs-wrapper">
      <label>
        {{t "reset_password.email_label"}}
        <input 
          id="reset-password-email" 
          name="email" 
          type="email" 
          placeholder="{{t 'reset_password.email_placeholder'}}"
          hx-preserve="true"
          class="{{#if errors.email}}error{{/if}}"
          required 
        />
      </label>
      <button type="submit" class="primary">
        <span>{{> icons/spinner}}</span>
        {{t "pages.reset_password_link"}}
      </button>
    </div>
    {{#if error}}<p class="error">{{error}}</p>{{/if}}
  {{/if}}
</form>
