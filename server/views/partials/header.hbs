<header>
  <div class="logo-wrapper">
    <a class="logo nav" href="/" title="{{t 'common.homepage'}}">
      <img src="/images/logo.png" alt="kutt" width="18" height="24" />
      {{site_name}}
    </a>
    <ul class="logo-links">
      <li>
        <a class="nav" href="https://github.com/thedevs-network/kutt" target="_blank" rel="noopener noreferrer" title="{{t 'common.github'}}">
          {{t 'common.github'}}
        </a>
      </li>
      {{#if report_email}}
        <li>
          <a class="nav" href="/report" title="{{t 'common.report'}}">
            {{t 'common.report'}}
          </a>
        </li>
      {{/if}}
      <li class="language-selector">
        <select onchange="window.location.href='/language/' + this.value">
          <option value="en" {{#ifEquals lng "en"}}selected{{/ifEquals}}>English</option>
          <option value="vi" {{#ifEquals lng "vi"}}selected{{/ifEquals}}>Tiếng Việt</option>
        </select>
      </li>
    </ul>
  </div>
  <nav>
    <ul>
      {{#unless user}}
        {{#unless login_disabled}}
          <li>
            <a class="button primary" href="/login" title="{{t 'pages.login_signup'}}">
              {{t 'pages.login_signup'}}
            </a>
          </li>
        {{/unless}}
      {{/unless}}
      {{#if user}}
        <li>
          <a class="button primary" href="/settings" title="{{t 'common.settings'}}">
            <span>{{> icons/cog}}</span>
            {{t 'common.settings'}}
          </a>
        </li>
        {{#if isAdmin}}
          <li>
            <a class="button secondary" href="/admin" title="{{t 'common.admin'}}">
              <span>{{> icons/shield}}</span>
              {{t 'common.admin'}}
            </a>
          </li>
        {{/if}}
        <li>
          <a class="nav" href="/logout" title="{{t 'auth.logout'}}">
            {{t 'auth.logout'}}
          </a>
        </li>
      {{/if}}
    </ul>
  </nav>
</header>